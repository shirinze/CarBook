@model CreateBrandDto
@{
    ViewData["Title"] = "CreateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Araç Markası</h4>
                        <p class="card-subtitle mb-4">Arabalarla ilgili yeni Marka ekleme bu sayfa üzerinden gerçekleştirebilirsiniz.</p>
                        <form method="post">
                            <div class="form-group">
                                <input type="text" class="form-control" id="exampleInputName" asp-for="name" placeholder="Marka Adı Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


