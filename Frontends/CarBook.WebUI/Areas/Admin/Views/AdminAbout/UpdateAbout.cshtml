@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Hakkımda Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Ana sayfanın Hakkımda alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz.Tema bütünlüğünün bozulmaması adına lütfen sadece 1 tane veri girişi yapınız.</p>
                        <form method="post">
                            <input type="hidden" asp-for="aboutID" />
                            <div class="form-group">
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="title">
                            </div>
                            <div class="form-group">
                                <textarea rows="5" class="form-control" id="exampleInputDescription" asp-for="description"></textarea>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="exampleInputVideoUrl" asp-for="imageUrl">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
