@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Kategori Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Kategori Güncelleme alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="CategoryID" />
                            <div class="form-group">
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Name" placeholder="Kategori Adı Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


