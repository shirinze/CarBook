@model CreateFooterAddressDto
@{
    ViewData["Title"] = "CreateFooterAdress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Footer Adress Sayfası</h4>
                        <p class="card-subtitle mb-4">İletişim ve footer alanında yer alan adress kısımlarını bu sayfa üzerinden gerçekleştirebilirsiniz. Harita biligisini lokasyon değeri olarak Google map üzerinden alabilirsiniz.Tema bütünlüğünün bozulmaması adına lütfen sadece 1 tane veri girişi yapınız.</p>
                        <form method="post">
                            <div class="form-group">
                                <input type="text" class="form-control" id="exampleInputAddress" asp-for="Address" placeholder="Adress Giriniz">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="exampleInputPhone" asp-for="Phone" placeholder="Telefon Giriniz">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="exampleInputEmail" asp-for="Email" placeholder="Email Giriniz">
                            </div>
                            <div class="form-group">
                                <textarea rows="5" asp-for="Description" placeholder="Açıklama Giriniz" ></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

