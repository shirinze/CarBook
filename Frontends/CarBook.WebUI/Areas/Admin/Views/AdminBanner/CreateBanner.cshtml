@model CreateBannerDto
@{
    ViewData["Title"] = "CreateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Banner Sayfası</h4>
                        <p class="card-subtitle mb-4">Ana sayfanın banner alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz.Tema bütünlüğünün bozulması adına lütfen sadece 1 tane veri girişi yapınız.</p>
                        <form method="post">
                            <div class="form-group">
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Banner Başlık Giriniz">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Banner Açıklama Giriniz">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="exampleInputVideoUrl" asp-for="VideoUrl" placeholder="Banner Video Url Giriniz">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="exampleInputVideoDescription" asp-for="VideoDescription" placeholder="Banner Video Açiklama Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

