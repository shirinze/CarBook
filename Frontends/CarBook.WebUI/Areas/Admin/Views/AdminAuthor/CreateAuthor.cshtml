@model CreateAuthorDto
@{
    ViewData["Title"] = "CreateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Yazar Ekleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Ana sayfanın Yazar Eklem alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz.</p>
                        <form method="post">
                            <div class="form-group">
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Name" placeholder="Yazar Adı Giriniz">
                            </div>
                            <div class="form-group">
                                <textarea rows="5" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Yazar Açıklama Giriniz"></textarea>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="exampleInputVideoUrl" asp-for="ImageUrl" placeholder="Yazar Görsel Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
     
</div>

